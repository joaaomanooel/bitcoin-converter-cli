{
  "name": "bitcoin-converter-cli",
  "version": "0.0.1",
  "description": "A CLI to convert Bitcoin to any currency provided",
  "main": "index.js",
  "scripts": {
    "clear": "rimraf bin",
    "build": "npm run clear && babel --out-dir bin src",
    "build:watch": "npm run build -- --watch",
    "lint": "eslint src/**/*.js tests/**/*.spec.js",
    "test": "mocha tests/**/*.spec.js --reporter nyan",
    "test:tdd": "npm test -- --watch ",
    "test:coverage": "nyc npm test",
    "link": "npm run build && npm link"
  },
  "preferGlobal": true,
  "bin": {
    "bitcoin-converter-cli": "bin/main.js"
  },
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-converage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joaaomanooel/bitcoin-converter-cli.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Jo√£o Manoel Neto <joaaomanooel@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joaaomanooel/bitcoin-converter-cli/issues"
  },
  "homepage": "https://github.com/joaaomanooel/bitcoin-converter-cli#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "chai": "^4.2.0",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "nock": "^10.0.6",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.3",
    "sinon-chai": "^3.3.0"
  },
  "dependencies": {
    "commander": "^2.19.0",
    "request": "^2.88.0"
  }
}
